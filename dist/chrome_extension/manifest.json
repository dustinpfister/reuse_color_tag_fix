{
  "manifest_version": 3,
  "name": "Reuse data1 Color Tag Fix R6",
  "description": "This chrome extension injects the data1 color tag patch into data1 each time the page reloads.",
  "version": "0.6",
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "action": {
    "default_popup": "popup_menu.html"
  },
  "content_scripts": [
    {
      "js": [ "patch.js", "colorset_api.js" ],
      "matches": [
        "https://data1.ithacareuse.org/pricing/portal/RMC/",
        "https://data1.ithacareuse.org/pricing/portal/IRC/"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["colorset_api.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
